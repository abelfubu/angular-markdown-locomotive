{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["app/models/*"],
      "@ui/*": ["app/shared/ui/*"],
      "@utils/*": ["app/utils/*"],
      "@env/*": ["environments/*"]
    },
    "types": ["jest"],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "files": ["src/polyfills.ts"],
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}
